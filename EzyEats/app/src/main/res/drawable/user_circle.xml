<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color for the circle -->
    <solid android:color="@android:color/transparent" /> <!-- Light gray color, change it if needed -->

    <!-- Border for the circle -->
    <stroke
        android:width="1dp"
        android:color="#e9e9e9" /> <!-- Border color, can be customized -->

    <!-- Padding inside the circle -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
